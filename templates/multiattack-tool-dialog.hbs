<div class="flexcol">
        {{#each weapons}}
        <div class="MA5e-multiattack" id="{{this.id}}">
                <label for="{{this.id}}"><img class="imgMA5e" src="{{this.img}}"></label>
                <label for="{{this.id}}" class="labelMA5e">{{this.name}}</label>
                <input type="number" class="inputMA5e" id="{{this.id}}input" placeholder="1" value="{{this.count}}">
                <input type="checkbox" class="dialog-checkbox" id="{{this.id}}checkbox" {{#if this.checked}}checked{{/if}}>
        </div>
        {{/each}}
        <br>
        <div class="MA5e-multiattack-flex">
                <button class="buttonMA5e" id="setDefaultButton">{{ localize "MA5e.tool.dialog.setDefault" }}</button>
                <button class="buttonMA5e" id="clearDefaultButton">{{ localize "MA5e.tool.dialog.clearDefault" }}</button>
        </div>
        <br>
</div>